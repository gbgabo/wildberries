---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import { importImage } from '~/lib/assets';

interface Props {
  class?: string;
  imagePath: string;
  altText: string;
}

const { imagePath, altText, class: className } = Astro.props;
const image = importImage(imagePath);
---

<Image class={className} src={image} loading="eager" alt={altText} />

---
import LabelledButton from '@components/LabelledButton.astro';
import profilePic from '@assets/images/ui/profile_alpha.svg';

interface Props {
  variant?: 'primary' | 'secondary';
}

const variants = {
  primary: 'bg-gradient-to-t from-cherry to-darker-purple to-60%',
  secondary: 'bg-gradient-to-t from-dark-purple to-darker-purple from-[-50%] to-40%',
};

const { variant = 'primary' } = Astro.props;
---

<footer
  class={`${variants[variant]} flex flex-col items-center justify-around gap-7 bg-darker-purple pb-56 pt-20 text-center text-acid-green md:flex-row`}
>
  <LabelledButton top="Check the project on" bottom="Github" href="https://github.com/gbgabo/wildberries" />
  <LabelledButton top="Made with â™¥ by" bottom="@gbgabo" image={profilePic} href="https://github.com/gbgabo" />
</footer>

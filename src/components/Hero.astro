---
import Button from '@components/Button.astro';

interface CallToAction {
  text: string;
  href: string;
  icon?: string;
}
interface Props {
  cta?: CallToAction;
}

const { cta } = Astro.props;
---

<main
  class="relative z-20 md:px-16 md:p-10 md:mx-auto shadow-lg
      bg-darker-purple bg-gradient-to-b from-darker-purple from-50% to-cherry
        md:bg-gradient-to-br md:from-20% md:to-95%"
>
  <div
    class="lg:flex lg:gap-40 h-[800px] max-w-7xl lg:items-center lg:py-0 md:py-20 py-12 grid grid-rows-2
          w-fit mx-auto gap-16"
  >
    <div class="flex flex-col items-center justify-center md:items-start">
      <div class="m-0 mt-20 md:text-left text-center md:p-0 md:mt-0 px-5 text-4xl font-semibold xl:text-5xl md:w-max text-pink">
        <slot name="title" />
      </div>
      <div class="mb-8 mt-3 md:text-left text-center text-xl text-light-purple md:text-2xl px-5 md:p-0">
        <slot name="subtitle" />
      </div>
      {cta && <Button {...cta}>{cta?.text}</Button>}
    </div>
    <slot />
  </div>
</main>

---
import Button from '../components/Button.astro';

interface CallToAction {
  text: string;
  href: string;
  icon?: string;
}
interface Props {
  cta?: CallToAction;
}

const { cta } = Astro.props;

---

<main
  class="relative z-20 grid grid-rows-2 content-center items-center justify-center gap-16 bg-darker-purple 
            bg-gradient-to-t from-darker-purple from-80% to-cherry p-10 shadow-lg md:grid-cols-2 
            md:grid-rows-1 md:gap-0 md:bg-gradient-to-tl md:from-60% md:to-95% xl:px-72 xl:py-40"
>
  <div class="flex flex-col items-center justify-center md:mr-56 md:items-start">
    <h1 class="m-0 text-4xl font-semibold md:text-5xl">
        <slot name="title"/>    
    </h1>
    <div class="my-8 text-xl text-light-purple md:text-2xl">
        <slot name="subtitle"/>
    </div>
    {cta && <Button {...cta}>{cta?.text}</Button>}
  </div>
  <slot/>
</main>